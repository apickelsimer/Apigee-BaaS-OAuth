<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage name="Validate Credentials Request">
    <AssignTo createNew="true" type="request">cred.request</AssignTo>
    <Set>
        <Headers/>
        <Verb>POST</Verb>
        <Payload contentType="application/json" variablePrefix="@" variableSuffix="#">
{"grant_type":"@grant#", "username":"@usr#", "password":"@pwd#"}
      </Payload>
    </Set>
</AssignMessage>